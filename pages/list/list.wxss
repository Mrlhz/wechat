/* pages/list/list.wxss */

.classic-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.classic-item {
  width: 100%;
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 50px;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.date-wrap {
  margin-left: 10px;
  margin-top: 7px;
}

.date-wrap .container {
  display: inline-flex;
  flex-direction: row;
  height: 60rpx;
}

.header .no {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.no .plain {
  font-size: 32rpx;
}

.no .index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  margin-right: 7px;
  height: 44rpx;
  border-left: 1px solid black;
}

.date {
  display: flex;
  flex-direction: column;
  height: 60rpx;
  margin-top: 5rpx;
}

.month {
  margin-right: 2rpx;
  padding-bottom: 2px;
  font-size: 24rpx;
  line-height: 24rpx;
}

.year {
  padding-bottom: 3px;
  font-size: 20rpx;
  line-height: 10px;
}

.like {
  display: inline-flex;
  flex-direction: row;
  padding: 10rpx;
  margin-right: 30rpx;
  margin-top: 12rpx;
}

.like-contianer {
  display: inline-flex;
  flex-direction: row;
  padding: 10rpx;
}

.like image {
  width: 32rpx;
  height: 28rpx;
}

.like text {
  position: relative;
  left: 6rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #bbb;
}

/* content */

.content-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content-wrap .classic-img {
  width: 750rpx;
  height: 500rpx;
}

.classic-circle-img {
  width: 422rpx;
  height: 422rpx;
  margin-top: 60rpx;
  border-radius: 50%;
}

.content-wrap .tag {
  width: 46rpx;
  height: 142rpx;
  position: relative;
  right: 310rpx;
  bottom: 58rpx;
}

.content {
  display: flex;
  max-width: 550rpx;
  font-size: 36rpx;
}

.sub-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0;
  width: 100%;
  min-height: 80rpx;
}

.sub-title {
  width: 600rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f7f7f7;
}
